<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/iv_chatlist_profile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="채팅상대이름"
        android:id="@+id/tv_chatlist_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_chatlist_profile"
        android:layout_toEndOf="@+id/iv_chatlist_profile"
        android:layout_marginTop="8dp"
        android:layout_marginRight="150dp"
        android:singleLine="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="마지막내용"
        android:id="@+id/tv_chatlist_content"
        android:layout_below="@+id/tv_chatlist_title"
        android:layout_toRightOf="@+id/iv_chatlist_profile"
        android:layout_toEndOf="@+id/iv_chatlist_profile"
        android:layout_marginRight="90dp"
        android:minLines="1"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="오전 10:30"
        android:id="@+id/tv_chatlist_date"
        android:layout_alignTop="@+id/tv_chatlist_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />
</RelativeLayout>
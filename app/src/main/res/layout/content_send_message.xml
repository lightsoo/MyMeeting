<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.meetpeople.lightsoo.mymeeting.Activity.SendMessageActivity"
    tools:showIn="@layout/activity_send_message"
    android:background="#D0EBE3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/send_message_1"
        android:layout_above="@+id/send_message_2"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_writer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="사용자아이디"
            android:id="@+id/writer_id"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_writer"
            android:layout_toEndOf="@+id/img_writer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="여자 3"
            android:id="@+id/writer_number"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_writer"
            android:layout_toEndOf="@+id/img_writer" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/send_message_2"
        android:layout_above="@+id/send_message_3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="메시지 내용"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/send_message_3"
        android:layout_above="@+id/send_message_4"
        android:background="#AAFF0000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/common_full_open_on_phone"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:id="@+id/send_message_4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:id="@+id/iv_chat_room_plus"
            android:scaleType="fitXY"
            android:src="@drawable/chat_room_plus" />

        <EditText
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/et_chat_room_msg"
            android:layout_weight="1.43"
            android:paddingLeft="7dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_chat_room_send"
            android:background="@drawable/chat_room_send_disable" />
    </LinearLayout>
</RelativeLayout>
